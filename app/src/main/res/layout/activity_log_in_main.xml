<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dona_box"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/NameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/LastNET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="LastName:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EmailET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/PasswordBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/FinishWithInBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_info"/>

    <Button
        android:id="@+id/MakeYDBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_ofdonation"/>

</LinearLayout>